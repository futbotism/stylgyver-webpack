{
  "name": "stylgyver-webpack",
  "version": "1.0.0",
  "description": "A plugin for parsing angular projects and extracting meta info for displaying into a styleguide.",
  "main": "out/index.js",
  "scripts": {
    "test": "jest --ci --silent",
    "build": "tsc",
    "watch": "tsc -w",
    "prepublish": "tsc"
  },
  "keywords": [],
  "author": "Juan Camilo Guar√≠n P",
  "license": "MIT",
  "devDependencies": {
    "@types/glob": "^5.0.33",
    "@types/jest": "^21.1.4",
    "@types/lodash": "^4.14.81",
    "@types/node": "^8.0.47",
    "jest": "^21.2.1",
    "ts-jest": "^21.1.3",
    "tslint": "^5.8.0",
    "tslint-config-airbnb": "^5.3.0",
    "typescript": "^2.5.3"
  },
  "dependencies": {
    "glob": "^7.1.2",
    "lodash": "^4.17.4",
    "parse-comments": "^0.4.3"
  },
  "jest": {
    "mapCoverage": true,
    "collectCoverage": true,
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/out"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/futbotism/stylgyver-webpack.git"
  },
  "bugs": {
    "url": "https://github.com/futbotism/stylgyver-webpack/issues"
  },
  "homepage": "https://github.com/futbotism/stylgyver-webpack#readme"
}
